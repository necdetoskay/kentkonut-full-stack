# Node Environment
NODE_ENV=development

# Server Configuration
SERVER_HOST=localhost
PORT=3021
FRONTEND_PORT=3020

# Database Configuration (Remote PostgreSQL server)
DATABASE_URL=postgresql://postgres:KentKonut2025@172.41.42.51:5433/kentkonutdb
DB_HOST=172.41.42.51
DB_PORT=5433
DB_NAME=kentkonutdb
DB_USER=postgres
DB_PASSWORD=KentKonut2025

# Redis Configuration (Remote Docker Redis server)
REDIS_URL=redis://:redis123@172.41.42.51:6379
