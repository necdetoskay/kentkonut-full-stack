NEXTAUTH_URL_INTERNAL=http://localhost:3021

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3021
NEXT_PUBLIC_FRONTEND_PORT=3020
NEXT_PUBLIC_BACKEND_PORT=3021
