# KentKonut Production Environment Variables
# Simplified configuration for host 172.41.42.51

# ==============================================
# DATABASE CONFIGURATION (Internal Only)
# ==============================================
POSTGRES_PASSWORD=KentKonut2025
DATABASE_URL=postgres://postgres:your_secure_postgres_password_here@postgres:5432/kentkonutdb

# ==============================================
# REDIS CONFIGURATION (Internal Only)
# ==============================================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
NODE_ENV=production
API_BASE_URL=http://172.41.42.51:3021
VITE_API_BASE_URL=http://172.41.42.51:3021
NEXT_PUBLIC_API_URL=http://172.41.42.51:3021

# ==============================================
# NEXTAUTH CONFIGURATION
# ==============================================
NEXTAUTH_URL=http://172.41.42.51:3021
NEXTAUTH_URL_INTERNAL=http://backend:3021
NEXTAUTH_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-long
AUTH_TRUST_HOST=true

# ==============================================
# CORS CONFIGURATION
# ==============================================
# Updated for new port configuration
CORS_ALLOWED_ORIGIN=http://172.41.42.51:3020,http://localhost:3020,http://172.41.42.51:3021,http://172.41.42.51
# Eski değişkenler (geriye dönük uyumluluk için)
CORS_ORIGIN=http://172.41.42.51:3020,http://localhost:3020,http://172.41.42.51:3021,http://172.41.42.51
ALLOWED_ORIGINS=http://172.41.42.51:3020,http://localhost:3020,http://172.41.42.51:3021,http://172.41.42.51

# ==============================================
# JWT SECURITY
# ==============================================
# Güçlü bir JWT secret key oluşturun
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-long
JWT_EXPIRES_IN=7d

# ==============================================
# EMAIL CONFIGURATION (Optional)
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ==============================================
# SECURITY SETTINGS
# ==============================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# ==============================================
# FILE UPLOAD SETTINGS
# ==============================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# ==============================================
# SSL/TLS (Nginx ile kullanım için)
# ==============================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key
